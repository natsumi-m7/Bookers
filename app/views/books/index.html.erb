<% if flash[:notice] %>
  <p class="text"><%= flash[:notice] %></p>
<% end %>



<h2>Books</h2>

<table border="0" class="table">
		<tr>
			<th>Title</th>
			<th>Body</th>
		<tr>
	<% @books.each do |book| %>
  		<tr>
    		<th><%= book.book_title %></th>
    		<th><%= book.book_body %></th>
    		<td>
    			<%= link_to "Show",book_path(book.id),class: "show_#{book.id}" %>
    			<%= link_to "Edit",edit_book_path(book.id),class: "edit_#{book.id}" %>
    			<%= link_to "削除", destroy_book_path(book.id), method: :delete,"data-confirm" => "本当に削除しますか？",class: "destroy_#{book.id}" %>
    		</td>
  		</tr>
  	<% end %>
</table>






<h3>New book</h3>
<%= form_for(@book) do |f| %>
 
    <h4>Title</h4>
    <%= f.text_field :book_title, class: "book_title" %>
 
    <h4>Body</h4>
    <%= f.text_area :book_body, class: "book_body" %>
	<div>
    	<%= f.submit 'Create Book' %>
    </div>
 
<% end %>
