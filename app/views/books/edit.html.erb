

<h2>Editing Book</h2>

<%= form_for(@book) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :book_title %>
    <h4>Body</h4>
    <%= f.text_area :book_body %>
    <div>
    	<%= f.submit 'Update Book' %>
	</div>

<% end %>

<%= link_to "Show",book_path(@book.id),class: "show_#{@book.id}" %>
<%= link_to "Back",books_path, class: "back" %>
